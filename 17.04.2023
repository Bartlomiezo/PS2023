#include <stdio.h>
#include <stdlib.h>
#include <string.h>
int dlugosc1(char a[]){
    int licznik=0;
    for(int i=0;a[i]!=0;i++){
        licznik++;
    }
    printf("%d\n",licznik);
    return licznik;
}
int dlugosc2(wchar_t *a){
    int licznik=0;
    for(int i=0;a[i]!=0;i++){
        licznik++;
    }
    printf("%d\n",licznik);
    return licznik;
}
void przepisz(char *a[], char *b[]){
    int n=dlugosc1(a);
    strncat(b,a,n);
    printf("%s\n",b);
}
void kopiuj(char *nap1[], char *nap2[], int *n){
    int x=dlugosc1(nap1);
    printf("DLUGOSC\n%d\n",x);
    if(x<n){
        strncat(nap2,nap1,x);
    }
    else strncat(nap2,nap1,n);
    printf("%s\n",nap2);
}
int main()
{
    dlugosc1("lubie tiry <3");
    dlugosc2(L"lubie tiry <3"L"Scania number 1");
    char arr1[7]=("marek12");
    char arr2[14]=("nietiry");
    przepisz(arr1,arr2); //zrobiÄ‡ przepisz2 z wchar_t
    char nap1[9]=("truckerzy");
    char nap2[18]=("busiarzem");
    kopiuj(nap1,nap2,9);
}
